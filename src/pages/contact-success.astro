---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Message Sent | X4O (Pty) Limited">
  <section class="min-h-[60vh] flex items-center justify-center bg-mesh px-4">
    <div class="glass-card rounded-2xl p-10 md:p-16 text-center max-w-lg">
      <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-primary/20 flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 text-primary-dark" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
        </svg>
      </div>
      <h1 class="text-3xl font-bold text-primary-dark mb-4">Thank You!</h1>
      <p class="text-gray-600 text-lg mb-8">
        Your message has been sent successfully. We'll get back to you as soon as possible.
      </p>
      <a href="/" class="btn-primary">Back to Home</a>
    </div>
  </section>
</Layout>
