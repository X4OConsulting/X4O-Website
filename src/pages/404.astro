---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found | X4O (Pty) Limited">
  <section class="min-h-[70vh] flex items-center justify-center bg-mesh px-4">
    <div class="glass-card rounded-2xl p-10 md:p-16 text-center max-w-lg">
      <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-primary/20 flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 text-primary-dark" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      <h1 class="text-3xl md:text-4xl font-bold text-primary-dark mb-4">404 - Page Not Found</h1>
      <p class="text-gray-600 text-lg mb-8">
        Sorry, the page you're looking for doesn't exist or has been moved.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/" class="btn-primary">Back to Home</a>
        <a href="/contact" class="btn-outline">Contact Us</a>
      </div>
    </div>
  </section>
</Layout>
