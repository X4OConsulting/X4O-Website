---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- Hero Section -->
  <section class="hero-gradient relative py-20 px-4 text-center">
    <div class="max-w-4xl mx-auto">
      <p class="text-[#97c0e8] uppercase tracking-widest text-sm font-semibold mb-3">Our Services</p>
      <h1 class="text-4xl md:text-5xl font-bold text-white">Book a Coaching Session</h1>
    </div>
  </section>

  <!-- Intro Section -->
  <section class="bg-mesh py-16 px-4">
    <div class="max-w-3xl mx-auto text-center">
      <p class="text-lg md:text-xl text-gray-700 leading-relaxed">
        Choose from our different coaching offerings what suits your immediate needs.
        We can customise our approach to be specific to your requirements.
      </p>
    </div>
  </section>

  <!-- Booking Cards Section -->
  <section class="py-16 px-4 bg-mesh">
    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">

      <!-- Card 1: Personal Transformation Coaching -->
      <div class="glass-card rounded-2xl overflow-hidden flex flex-col transition-transform duration-300 hover:-translate-y-1">
        <div class="p-8 flex flex-col flex-1">
          <!-- Icon -->
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-[#97c0e8] to-[#174069] flex items-center justify-center mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 17.25s-1.5-1.5-1.5-3a1.5 1.5 0 1 1 3 0c0 1.5-1.5 3-1.5 3Z" />
            </svg>
          </div>
          <!-- Heading -->
          <h2 class="text-xl font-bold text-[#174069] mb-3">Personal Transformation Coaching</h2>
          <!-- Description -->
          <p class="text-gray-600 leading-relaxed flex-1 mb-6">
            Uncover your true essence and start living with purpose.
          </p>
          <!-- Info Bar -->
          <div class="flex items-center justify-between bg-[#174069]/5 rounded-lg px-4 py-3 mb-6">
            <div class="flex items-center gap-2 text-sm text-[#174069]">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
              </svg>
              <span class="font-medium">1 hr 30 min</span>
            </div>
            <div class="flex items-center gap-2 text-sm text-[#174069]">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0 1 15.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 0 1 3 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 0 0-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 0 1-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 0 0 3 15h-.75M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0h.008v.008H18V10.5Zm-12 0h.008v.008H6V10.5Z" />
              </svg>
              <span class="font-medium">Via Quote</span>
            </div>
          </div>
          <!-- CTA Button -->
          <a
            href="/contact?subject=Personal%20Transformation%20Coaching%20Booking%20Request"
            class="btn-primary text-center w-full"
          >
            Request to Book
          </a>
        </div>
