---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/consulting-and-advisory-services', label: 'Consulting & Advisory' },
  {
    href: '/coaching-services',
    label: 'Coaching Services',
    children: [
      { href: '/book-coaching-sessions', label: 'Book Coaching Sessions' },
    ],
  },
  { href: '/book-coaching-sessions', label: 'Book a Session' },
  { href: '/partners', label: 'Partners' },
  { href: '/contact', label: 'Contact Us' },
];

function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<header id="site-header" class="fixed top-0 left-0 w-full z-50 transition-all duration-300">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 md:h-20">

      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 shrink-0" aria-label="X4O Home">
        <img src="/images/logo.png" alt="X4O Logo" class="h-10 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden lg:flex items-center gap-1">
        {navLinks.map((link) => (
          <li class={`relative${link.children ? ' group' : ''}`}>
            <a
              href={link.href}
              class:list={[
                'px-3 xl:px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 inline-flex items-center gap-1',
                isActive(link.href)
                  ? 'text-primary bg-white/10'
                  : 'text-primary-50 hover:text-primary hover:bg-white/5',
              ]}
              aria-current={isActive(link.href) ? 'page' : undefined}
            >
              {link.label}
              {link.children && (
                <svg class="w-3.5 h-3.5 ml-0.5 transition-transform duration-200 group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                </svg>
              )}
            </a>

            {/* Dropdown submenu */}
            {link.children && (
              <ul class="absolute top-full left-0 mt-1 w-56 py-2 rounded-xl glass-dark opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 translate-y-1 group-hover:translate-y-0">
                {link.children.map((child) => (
                  <li>
                    <a
                      href={child.href}
                      class:list={[
                        'block px-4 py-2.5 text-sm transition-colors duration-200',
                        isActive(child.href)
                          ? 'text-primary bg-white/10'
                          : 'text-primary-50 hover:text-primary hover:bg-white/5',
                      ]}
                    >
                      {child.label}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        ))}
      </ul>

      <!-- Mobile Menu Toggle -->
      <input type="checkbox" id="mobile-menu-toggle" class="hidden peer" aria-hidden="true" />
      <label
        for="mobile-menu-toggle"
        class="lg:hidden relative w-10 h-10 flex items-center justify-center rounded-lg text-primary-50 hover:text-primary hover:bg-white/10 transition-colors duration-200 cursor-pointer"
        aria-label="Toggle navigation menu"
      >
        <!-- Hamburger icon -->
        <span class="hamburger-icon block w-5">
          <span class="block h-0.5 w-full bg-current transition-all duration-300 origin-center"></span>
          <span class="block h-0.5 w-full bg-current mt-1 transition-all duration-300"></span>
          <span class="block h-0.5 w-full bg-current mt-1 transition-all duration-300 origin-center"></span>
        </span>
      </label>

      <!-- Mobile Navigation Panel -->
      <div
        class="fixed inset-0 top-16 md:top-20 -translate-x-full peer-checked:translate-x-0 transition-transform duration-300 ease-in-out lg:hidden z-40"
      >
        <div class="h-full glass-dark overflow-y-auto">
          <ul class="flex flex-col px-4 py-6 gap-1">
            {navLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class:list={[
                    'block px-4 py-3 rounded-lg text-base font-medium transition-colors duration-200',
                    isActive(link.href)
                      ? 'text-primary bg-white/10'
                      : 'text-primary-50 hover:text-primary hover:bg-white/5',
                  ]}
                  aria-current={isActive(link.href) ? 'page' : undefined}
                >
                  {link.label}
                </a>

                {link.children && (
                  <ul class="ml-4 mt-1 border-l border-primary/20 pl-4">
                    {link.children.map((child) => (
                      <li>
                        <a
                          href={child.href}
                          class:list={[
                            'block px-4 py-2.5 rounded-lg text-sm transition-colors duration-200',
                            isActive(child.href)
                              ? 'text-primary bg-white/10'
                              : 'text-primary-100 hover:text-primary hover:bg-white/5',
                          ]}
                        >
                          {child.label}
                        </a>
                      </li>
                    ))}
                  </ul>
                )}
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>

<!-- Scroll behaviour: add glass-dark background on scroll -->
<script>
  const header = document.getElementById('site-header');
  if (header) {
    const onScroll = () => {
      if (window.scrollY > 20) {
        header.classList.add('glass-dark');
      } else {
        header.classList.remove('glass-dark');
      }
    };
    window.addEventListener('scroll', onScroll, { passive: true });
    onScroll();

    // Close mobile menu when a link is clicked
    const toggle = document.getElementById('mobile-menu-toggle') as HTMLInputElement | null;
    if (toggle) {
      document.querySelectorAll('#site-header a').forEach((link) => {
        link.addEventListener('click', () => {
          toggle.checked = false;
        });
      });
    }
  }
</script>

<style>
  /* Hamburger animation when menu is open */
  #mobile-menu-toggle:checked ~ label .hamburger-icon span:nth-child(1) {
    transform: translateY(6px) rotate(45deg);
  }
  #mobile-menu-toggle:checked ~ label .hamburger-icon span:nth-child(2) {
    opacity: 0;
  }
  #mobile-menu-toggle:checked ~ label .hamburger-icon span:nth-child(3) {
    transform: translateY(-6px) rotate(-45deg);
  }
</style>
